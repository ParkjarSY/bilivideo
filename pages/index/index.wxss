/* 首页导航 */
page{
	color: #666;
	padding: 10rpx;
}
.nav_daoh{
	padding: 10rpx;
}
.nav{
	white-space: nowrap;
	padding: 6rpx 0;
}
.nav-item{
	padding: 20rpx 45rpx;
	font-size: 25rpx;
	display: inline-block;
}
.nav-item.active{
	border-bottom: 3rpx solid #de688b;
}

/* 轮播图 */

.swiper{
	padding: 20rpx;
}
.swiper swiper{
	height: 210rpx;
	
}
.swiper navigator{
	width: 100%;
	height: 100%;
}
.swiper image{
	width: 100%;
	height: 100%;
}


/* 视频内容 */
.video{
	display: flex;
	flex-wrap: wrap;
	padding: 5rpx;
	justify-content: space-between;
}

.video_item{
	width: 48%;
	margin-bottom: rpx;
}

.video_img{
	position: relative;
}
.video_img image{
	width: 100%;
	border-radius: 10rpx;
}
.video_img .video_info{
	position: absolute;
	bottom: 10rpx;
	left: 0;
	width: 98%;
	display: flex;
	justify-content: space-around;
	color: #fff;
	font-size: 24rpx;
}
.video_title{
	font-size: 28rpx;
	display: -webkit-box;
	overflow: hidden;
	white-space: normal;
	text-overflow: ellipsis;
	word-wrap: break-word;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}