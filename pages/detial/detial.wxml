<view class="mian">
  <Headers></Headers>
  <!-- 视频 -->
  <view class="video_info">
	  <!-- 视频 -->
	  <video src="{{videoInfo.videoSrc}}" controls></video>
	  <view class="title">
		  <text>{{videoInfo.videoTitle}}</text>
		  <text class="fa fa-angle-down"></text>
	  </view>
	  <view class="detial">
		  <!-- 作者 -->
		  <text class="author">{{videoInfo.author}}</text>
		  <!-- 播放量 -->
		  <tect class="paly-count">{{videoInfo.playCount}}</tect>
		  <!-- 评论 -->
		  <text class="comment">{{videoInfo.commentCount}} 弹幕</text>
		  <!-- 时间 -->
		  <text class="time">{{videoInfo.date}}</text>
	  </view>
  </view>
</view>